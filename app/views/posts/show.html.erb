<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<h1><%= @post.id %></h1>
<h1><%= @post.body %></h1>
<br>
<%= image_tag @post.image.url(:medium) %><br>
<%= link_to "Encode",  encode_image_url(@post) %>
<%= link_to "Decode",  decrypt_image_url(@post) %><br>
<br>

<h2>Comments:</h2>
<% @post.comments.map do |comment| %>
<li><%= comment.body %></li>
<% end %>
